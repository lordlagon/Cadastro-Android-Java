<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.alyson.myapplication.Pagamento"
android:orientation="vertical"
android:weightSum="1">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="VALOR DO PEDIDO"
    android:id="@+id/textView5"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.02"
    android:textColor="#f40cfc" />


<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/txtValorTotal"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.02"
    android:editable="false" />


<TextView
    android:layout_width="151dp"
    android:layout_height="wrap_content"
    android:text="NUMERO DO CARTÃO"
    android:id="@+id/textView"
    android:textColor="#f11818"
    android:layout_weight="0.02"
    android:textSize="15dp" />


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.02">


    <EditText
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal"
        android:maxLength="4" />


    <EditText
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editText2"
        android:maxLength="4" />


    <EditText
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editText3"
        android:maxLength="4" />


    <EditText
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editText4"
        android:maxLength="4" />
</LinearLayout>


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="CODIGO DE SEGURANÇA"
    android:id="@+id/textView2"
    android:layout_weight="0.02"
    android:textColor="#ecca0f" />


<EditText
    android:layout_width="195dp"
    android:layout_height="wrap_content"
    android:inputType="numberSigned"
    android:ems="10"
    android:id="@+id/editText5"
    android:maxLength="3" />


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="VALIDADE DO CARTAO"
    android:id="@+id/textView3"
    android:layout_weight="0.02"
    android:textColor="#23a30f" />


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.02"
    android:weightSum="1">


    <EditText
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editText8"
        android:layout_gravity="center_horizontal"
        android:maxLength="2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/textView6" />


    <EditText
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editText11"
        android:layout_weight="0.03"
        android:maxLength="2" />
</LinearLayout>


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="NOME IMPRESSO NO CARTÃO"
    android:id="@+id/textView4"
    android:layout_weight="0.02"
    android:textColor="#0debeb" />


<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:ems="10"
    android:id="@+id/txtNomeCliente"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.02" />


<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="FINALIZAR O PEDIDO"
    android:id="@+id/btnPagar"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.02" />


</LinearLayout>


